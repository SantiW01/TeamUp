<div class="container theme-showcase" role="main">
  <div class="page-header">
    <h3 class="blog-title">
      <span class="label label-success p-2">Editar datos de la Profesora</span>
    </h3>
  </div>
  <form action="/teacher/edit/{{teacher.id}}" method="post">
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label class="control-label">Nombre</label>
          <input
            type="text"
            value="{{teacher.name}}"
            class="form-control"
            name="name"
            placeholder="Nombre de la empleada"
            autofocus
          />
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label class="control-label">Apellido</label>
          <input
            type="text"
            value="{{teacher.surname}}"
            class="form-control"
            name="surname"
            placeholder="Apellido de la empleada"
          />
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label class="control-label">Email</label>
          <input
            type="email"
            value="{{teacher.email}}"
            class="form-control"
            name="email"
            placeholder="Email de la empleada"
          />
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label class="control-label">Ocupación</label>
          <div class="d-flex flex-row">
            <select name="description" class="form-control">
              {{#each degrees}}
                <option value="{{description}}">{{description}}</option>
              {{/each}}
            </select>
            <a href="/degree/post" title="Añade un nuevo trabajo"><img
                src="../../img/plus-circle.svg"
                alt=""
                class="translate-bottom p-3"
              /></a>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <button class="btn btn-success w-10 m-2 float-end">Guardar</button>
    </div>
  </form>
</div>